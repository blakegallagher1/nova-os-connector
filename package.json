{
  "name": "nova-os-connector",
  "version": "4.3.1",
  "description": "GitHub MCP Server Wrapper for Nova OS - ChatGPT Connector with tool annotations, batch operations, and security enhancements",
  "type": "module",
  "scripts": {
    "start": "node dist/server-direct.js",
    "start:old": "node dist/server.js",
    "start:minimal": "node dist/server-minimal.js",
    "start:test": "node dist/server-test.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc --skipLibCheck",
    "start:ts": "tsx src/server.ts",
    "start:legacy": "npx -y mcp-proxy --port 8000 --connectionTimeout 120000 --requestTimeout 300000 -- npx -y @modelcontextprotocol/server-github",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@modelcontextprotocol/server-github": "^2025.1.13",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "@vercel/sdk": "^1.18.7",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "typescript": "^5.8.2",
    "zod": "^3.25.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1"
  },
  "engines": {
    "node": "20.x"
  }
}
