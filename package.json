{
  "name": "nova-os-connector",
  "version": "2.0.0",
  "description": "GitHub MCP Server Wrapper for Nova OS - ChatGPT Connector with tool annotations and batch operations",
  "type": "module",
  "scripts": {
    "start": "node dist/server-minimal.js",
    "start:full": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc --skipLibCheck",
    "start:ts": "tsx src/server.ts",
    "start:legacy": "npx -y mcp-proxy --port 8000 --connectionTimeout 120000 --requestTimeout 300000 -- npx -y @modelcontextprotocol/server-github"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@modelcontextprotocol/server-github": "^2025.1.13",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "@vercel/sdk": "^1.18.7",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "typescript": "^5.8.2",
    "zod": "^3.25.6"
  },
  "devDependencies": {
    "tsx": "^4.19.1"
  },
  "engines": {
    "node": "20.x"
  }
}
